<%= form_with(model: @post, local: true) do |form| %>
<% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %><br>
    <%= form.cktext_area :body, id: :post_body %>
  </div>
  <div>
    <%= form.label :Категория %><br>
    <%= form.collection_select :tiding_id, Tiding.order(:name), :id, :name, :promt =>"Select one" %>
  </div>
  <div>
    <%= form.label :images %>
    <div class="image-sortable">
      <% post.images.each do |image| %>
        <div class="image">
          <%= hidden_field :post, :images, multiple: true, value:  image.cache_name || image.identifier %>
          <%= image_tag(image.url, height: 50) %>
          <button type="button" class="remove-image">Удалить</button>
        </div>
      <% end %>
      <div class="image">
        <%= form.file_field :images, multiple: true %>
      </div>
    </div>
  </div>

    <div>
    <%= form.label :active %><br>
    <%= form.check_box :active %>
  </div>
     <div>
    <%= form.label :adwpos %><br>
    <%= form.number_field :adwpos %>
  </div>
  

  <div>
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'Back', sales_path %>