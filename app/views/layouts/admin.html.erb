<!DOCTYPE html>
<html>
	<head>
	    <title>Kzn</title>
	    <%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	    <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
	    <%= javascript_include_tag Ckeditor.cdn_url %>
	        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
	    <link href="https://fonts.googleapis.com/css?family=Rubik|Share+Tech&amp;subset=cyrillic" rel="stylesheet">
	</head>

  <body>
  	<div class="container sticky-top">
	    <nav class="navbar navbar-expand-lg navbar-light navbar-fixed-top nav-admin" style="border-color:#000000">
	        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
	            <span class="navbar-toggler-icon"></span>
	        </button>

	        <%= link_to image_tag("logo.png", size: 80), root_path, class: "navbar-left" %>

	        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
	            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
	                <% if current_user.admin? %>
	                 <li class="nav-item">
	                    <%= link_to "Слайдер", admin_sliders_path, class: "nav-link nav-sim" %>
	                        
	                </li>
	                <% end %>
	                 <li class="nav-item">
	                    <%= link_to "Скидки", admin_sales_path, class: "nav-link nav-simz" %>
	                </li>
	                 <li class="nav-item">
	                    <%= link_to "Новости", admin_tidings_path, class: "nav-link nav-sim" %>
	                </li>
	                <li class="nav-item">
	                    <%= link_to "Места", admin_events_path, class: "nav-link nav-sim" %>
	                </li>
	                <% if current_user.admin? %>
	                <li class="nav-item">
	                    <%= link_to "Пользователи", admin_users_path, class: "nav-link nav-sim" %>
	                </li>
	                 <li class="nav-item">
	                    <%= link_to "Страницы", admin_pages_path, class: "nav-link nav-sim" %>
	                </li>
	                 <% end %>



	            </ul>
	            <div class="soc-bt d-none d-xl-block">
	            	<% if user_signed_in? %> 
	    	<%= current_user.email %>
        	<%= link_to 'Выйти', destroy_user_session_path, method: :delete %>
        <% else %>
            <a href=" <%= new_user_session_path %> ">Войти</a>
        <% end %>
	            </div>
	        </div>
	    </nav>
	</div>
			<%# render 'shared/catslider' %> 
			<%# render 'shared/catnav' %> 
			<%# render 'shared/src' %> 

	<div class="container main conpost">
		<div class="row">
			<div class="col-md-12">
				<% flash.each do |name, message| %>
					<div class="alert alert-<%= name %>">
						<button class="close" data-dismiss="alert">&times;</button>
						<%= message %>
					</div>	
				<%end %>
			</div>
		</div>
	    <div class="row">

	        <div class="col-lg-9 col-md-12 offers">           
				<%= yield %>
			</div>
	        <div class="col-lg-3 d-none d-lg-block adws-post">

	        </div>
	    </div>
	</div>
    <footer class="kaz-footer">
    	<%= render 'shared/footer' %> 
	</footer>
  </body>
</html>
