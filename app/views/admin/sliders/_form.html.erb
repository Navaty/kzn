<%= form_with(model: [:admin, @slider], local: true) do |form| %>
<% if slider.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(slider.errors.count, "error") %> prohibited this slider from being saved:</h2>

        <ul>
        <% slider.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-group">
    <%= form.label :Заголовок %><br>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Описание %><br>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Изображение %> <br>
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label :url %><br>
    <%= form.text_field :url, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Позиция %><br>
    <%= form.number_field :position, class:"form-control" %>
  </div>  

  

  <div>
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'Back', admin_sliders_path %>