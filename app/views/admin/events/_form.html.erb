<%= form_with(model: [:admin, @event], local: true) do |form| %>
<% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
