  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:"form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :Родитель %><br>
    <%= form.collection_select :parent_id, Event.order(:name), :id, :name, {include_blank: true }, class:"form-control"  %> <%# where("id != #{@sale.id}") %>
  </div>
  

  <div class="form-group">
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
